<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>system.log</file>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>
